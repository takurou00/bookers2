<h1>Editing Book</h1>
  <%= flash[:notice] %>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <%= f.label :title%>
    <%= f.text_field :title%>
    <br>
    <%= f.label :body%>
    <%= f.text_area :body%>
    <%= f.submit%>
<%end%>

<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>